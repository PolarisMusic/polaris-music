{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://polaris.music/schemas/release-bundle.json",
  "title": "ReleaseBundle",
  "description": "Canonical schema for music release submissions. All field names use snake_case.",
  "type": "object",
  "required": ["release", "tracks", "tracklist"],
  "additionalProperties": false,
  "properties": {
    "release": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "release_id": { "type": "string" },
        "name": { "type": "string", "minLength": 1 },
        "alt_names": { "type": "array", "items": { "type": "string" } },
        "release_date": { "type": "string" },
        "format": { "type": "string" },
        "country": { "type": "string" },
        "catalog_number": { "type": "string" },
        "liner_notes": { "type": "string" },
        "trivia": { "type": "string" },
        "album_art": { "type": "string", "format": "uri" },
        "master_id": { "type": "string" },
        "master_name": { "type": "string" },
        "labels": {
          "type": "array",
          "items": { "$ref": "#/definitions/Label" }
        },
        "guests": {
          "type": "array",
          "items": { "$ref": "#/definitions/Person" }
        }
      }
    },
    "groups": {
      "type": "array",
      "items": { "$ref": "#/definitions/Group" }
    },
    "tracks": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/Track" }
    },
    "tracklist": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/TracklistItem" }
    },
    "songs": {
      "type": "array",
      "items": { "$ref": "#/definitions/Song" }
    },
    "sources": {
      "type": "array",
      "items": { "$ref": "#/definitions/Source" }
    }
  },
  "definitions": {
    "Person": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "person_id": { "type": "string" },
        "name": { "type": "string", "minLength": 1 },
        "birth_name": { "type": "string" },
        "birth_date": { "type": "string" },
        "birth_city": { "$ref": "#/definitions/City" },
        "origin_city": { "$ref": "#/definitions/City" },
        "roles": { "type": "array", "items": { "type": "string" } },
        "role": { "type": "string" },
        "role_detail": { "type": "string" },
        "credited_as": { "type": "string" },
        "instruments": { "type": "array", "items": { "type": "string" } },
        "from_date": { "type": "string" },
        "to_date": { "type": "string" }
      }
    },
    "Group": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "group_id": { "type": "string" },
        "name": { "type": "string", "minLength": 1 },
        "alt_names": { "type": "array", "items": { "type": "string" } },
        "bio": { "type": "string" },
        "formed_date": { "type": "string" },
        "disbanded_date": { "type": "string" },
        "origin_city": { "$ref": "#/definitions/City" },
        "members": {
          "type": "array",
          "items": { "$ref": "#/definitions/Person" }
        }
      }
    },
    "Track": {
      "type": "object",
      "required": ["title"],
      "additionalProperties": false,
      "properties": {
        "track_id": { "type": "string" },
        "title": { "type": "string", "minLength": 1 },
        "duration": { "type": "number", "minimum": 0 },
        "isrc": { "type": "string" },
        "performed_by": { "type": "string" },
        "recording_of": { "type": "string" },
        "recording_date": { "type": "string" },
        "recording_location": { "type": "string" },
        "samples": { "type": "array", "items": { "type": "string" } },
        "performed_by_groups": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "group_id": { "type": "string" },
              "name": { "type": "string" },
              "credited_as": { "type": "string" },
              "role": { "type": "string" },
              "members_are_complete": { "type": "boolean" },
              "members": {
                "type": "array",
                "items": { "$ref": "#/definitions/Person" }
              }
            }
          }
        },
        "guests": {
          "type": "array",
          "items": { "$ref": "#/definitions/Person" }
        },
        "producers": {
          "type": "array",
          "items": { "$ref": "#/definitions/Person" }
        },
        "arrangers": {
          "type": "array",
          "items": { "$ref": "#/definitions/Person" }
        }
      }
    },
    "TracklistItem": {
      "type": "object",
      "required": ["position", "track_title"],
      "additionalProperties": false,
      "properties": {
        "position": { "type": "string" },
        "track_title": { "type": "string", "minLength": 1 },
        "track_id": { "type": "string" },
        "duration": { "type": "number", "minimum": 0 }
      }
    },
    "Song": {
      "type": "object",
      "required": ["title"],
      "additionalProperties": false,
      "properties": {
        "song_id": { "type": "string" },
        "title": { "type": "string", "minLength": 1 },
        "alt_titles": { "type": "array", "items": { "type": "string" } },
        "iswc": { "type": "string" },
        "writers": {
          "type": "array",
          "items": { "$ref": "#/definitions/WriterCredit" }
        }
      }
    },
    "WriterCredit": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "person_id": { "type": "string" },
        "name": { "type": "string", "minLength": 1 },
        "credited_as": { "type": "string" },
        "role": { "type": "string" },
        "roles": { "type": "array", "items": { "type": "string" } },
        "role_detail": { "type": "string" },
        "share_percentage": { "type": "number", "minimum": 0, "maximum": 100 }
      }
    },
    "Label": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "label_id": { "type": "string" },
        "name": { "type": "string", "minLength": 1 },
        "alt_names": { "type": "array", "items": { "type": "string" } },
        "parent_label": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "object",
              "properties": {
                "label_id": { "type": "string" },
                "name": { "type": "string" }
              }
            }
          ]
        },
        "origin_city": { "$ref": "#/definitions/City" },
        "city": {
          "description": "Deprecated: use origin_city instead",
          "$ref": "#/definitions/City"
        }
      }
    },
    "City": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "city_id": { "type": "string" },
        "name": { "type": "string", "minLength": 1 },
        "lat": { "type": "number", "minimum": -90, "maximum": 90 },
        "lon": { "type": "number", "minimum": -180, "maximum": 180 }
      }
    },
    "Source": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "accessed_at": { "type": "string" }
      }
    }
  }
}
